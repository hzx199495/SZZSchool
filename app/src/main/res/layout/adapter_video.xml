<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/polyv_white_click_to_gray"
    android:padding="2dp">


    <ImageView
        android:id="@+id/iv_demo"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/polyv_pic_demo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginLeft="2dp"
        android:layout_alignTop="@+id/iv_demo"
        android:layout_toRightOf="@+id/iv_demo"
        android:layout_toEndOf="@+id/iv_demo">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/center_bottom_margin_top_s"
            android:ellipsize="end"
            android:lines="2"
            android:text="这是一行测试文本这是一行测试文本这是一行测试文本这是一行测试文本这是一行测试文本这是一行测试文本"
            android:textColor="@color/top_text_color_black"
            android:textSize="13sp" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/center_bottom_margin_top_s"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/polyv_time" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/center_right_tv_margin_left"
                android:text="20:03"
                android:textColor="@color/center_right_text_color_green"
                android:textSize="10dp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_sline_height"
            android:layout_marginTop="@dimen/center_bottom_margin_top_s"
            android:background="@color/commom_sline_color_gray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="2dp">
            <!--<Button-->
                <!--android:id="@+id/study"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="开始学习"-->
                <!--android:focusable="false"-->
                <!--android:background="@drawable/btnstyle2"-->
                <!--android:textColor="@color/white"/>-->
            <!--<View-->
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/exam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btnstyle"
                android:text="开始考试"
                android:focusable="false"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>