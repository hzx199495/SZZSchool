<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_login_topbar"
        style="@style/TopbarStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="课程详情"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/back_arrow" />

        <ImageView
            android:id="@+id/share"
            style="@style/iv_click_commom"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/polyv_btn_share" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/rg2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wh40"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/intro2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="课程简介"
            android:textSize="@dimen/fl_text"
            android:textColor="@color/blue2"/>

        <TextView
            android:id="@+id/expand2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:button="@null"
            android:gravity="center"
            android:text="课程目录"
            android:textSize="@dimen/fl_text"/>
    </LinearLayout>
    <!--<com.fingdo.statelayout.StateLayout xmlns:sl="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/state_layout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="1"-->
        <!--sl:emptyImg="@drawable/nodata"-->
        <!--sl:errorImg="@drawable/ic_state_error"-->
        <!--sl:errorText="数据异常"-->
        <!--sl:loadingText="@string/loading_tip"-->
        <!--sl:noNetworkImg="@drawable/ic_state_no_network"-->
        <!--sl:noNetworkText="@string/no_network_tip"-->
        <!--sl:timeOutImg="@drawable/ic_state_time_out"-->
        <!--sl:timeOutText="@string/time_out_tip">-->

        <com.shizhanzhe.szzschool.widge.MyScrollView
            android:id="@+id/myscroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/detail_iv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh200"
                        android:scaleType="fitXY" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <TextView
                            android:id="@+id/detail_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="10dp"

                            android:textColor="@color/black"
                            android:textSize="@dimen/sp22" />

                        <TextView
                            android:id="@+id/detail_study"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/detail_title"
                            android:layout_marginTop="10dp" />

                        <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/detail_study"
                            android:layout_marginTop="10dp"
                            android:background="#e4e4e4" />

                        <TextView
                            android:id="@+id/detail_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/view"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="10dp"
                            android:textColor="#FF0000"
                            android:textSize="@dimen/sp22" />
                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/detail_price"
                            android:layout_marginTop="10dp"
                            android:background="#e4e4e4" />

                        <TextView
                            android:id="@+id/detail_yjprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/rg"
                            android:layout_toEndOf="@+id/detail_price"
                            android:layout_toRightOf="@+id/detail_price"
                            android:paddingLeft="10dp"
                            android:textSize="@dimen/fl_text" />


                        <RadioGroup
                            android:id="@+id/rg"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/wh40"
                            android:layout_below="@+id/view2"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/intro"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:button="@null"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="课程简介"
                                android:textSize="@dimen/fl_text"
                                android:textColor="@color/blue2"/>

                            <RadioButton
                                android:id="@+id/expand"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:button="@null"
                                android:gravity="center"
                                android:text="课程目录"
                                android:textSize="@dimen/fl_text"/>
                        </RadioGroup>
                        <View
                            android:id="@+id/view3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/rg"
                            android:background="#e4e4e4" />
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="vertical"
                            android:layout_below="@+id/view3"
                            android:id="@+id/proll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                        <ImageView
                            android:id="@+id/collect"
                            android:layout_width="@dimen/wh60"
                            android:layout_height="@dimen/wh50"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/detail_title"
                            android:layout_marginEnd="12dp"
                            android:layout_marginRight="12dp"
                            android:src="@drawable/ic_courseplay_star1" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </com.shizhanzhe.szzschool.widge.MyScrollView>
    <!--</com.fingdo.statelayout.StateLayout>-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wh45"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addwx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="#FFA500"
                android:text="微信群交流"
                android:textColor="#fff"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/wh45"
                android:layout_weight="1">

                <Button
                    android:id="@+id/buy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00bfff"
                    android:text="购买此课程"
                    android:textColor="#fff"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/study"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="#f00"
                    android:text="立即学习"
                    android:textColor="#fff"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>

</LinearLayout>