<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/app_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_my_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginTop="10.0dip"
                android:gravity="center"
                android:text="购买的课程"
                android:textColor="@color/max_level"
                android:textSize="14.0sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15.0dip"
                android:paddingRight="5.0dip"
                android:paddingTop="10.0dip">

                <com.shizhanzhe.szzschool.utils.MyGridView
                    android:id="@+id/gv_my_course"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="@color/white"
                    android:columnWidth="55.0dip"
                    android:gravity="center"
                    android:horizontalSpacing="3.0dip"
                    android:listSelector="@color/white"
                    android:numColumns="2"
                    android:scrollbars="none"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_choose_my"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20.0dip"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_mycourse_nozyk" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="41.5dip"
                        android:layout_marginTop="10.0dip"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="还没有购买的课程，马上"
                            android:textColor="@color/three_level"
                            android:textSize="12.0sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="去选择"
                            android:textColor="@color/green"
                            android:textSize="12.0sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="10.0dip"
            android:background="@color/app_bg" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginTop="10.0dip"
                android:gravity="center"
                android:text="收藏的课程"
                android:textColor="@color/max_level"
                android:textSize="14.0sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <com.shizhanzhe.szzschool.utils.MyGridView
                    android:id="@+id/gv_free_course"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="@color/white"
                    android:columnWidth="55.0dip"
                    android:gravity="center"
                    android:horizontalSpacing="3.0dip"
                    android:listSelector="@color/white"
                    android:numColumns="2"
                    android:paddingLeft="15.0dip"
                    android:paddingRight="5.0dip"
                    android:paddingTop="10.0dip"
                    android:scrollbars="none"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_choose_free"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30.0dip"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_mycourse_notfreekc" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="41.5dip"
                        android:layout_marginTop="10.0dip"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="还没有收藏的课程，马上"
                            android:textColor="@color/three_level"
                            android:textSize="12.0sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="去收藏"
                            android:textColor="@color/green"
                            android:textSize="12.0sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="10.0dip"
                        android:background="@color/app_bg" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>