<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout

                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/wh135"
                    android:background="@drawable/userbg"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/setzl"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh65"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/cv"
                            android:layout_width="@dimen/wh65"
                            android:layout_height="@dimen/wh65"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerCrop"
                            android:src="@drawable/userhead" />

                        <LinearLayout
                            android:layout_width="@dimen/wh100"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_toEndOf="@+id/cv"
                            android:layout_toRightOf="@+id/cv"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="未登录"
                                android:textColor="@color/white"
                                android:textSize="@dimen/fl_text" />

                            <ImageView
                                android:id="@+id/iv_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20dp"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/jt" />

                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/user_pro"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/wh45"
                    android:background="@color/white"
                    android:showDividers="middle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/pro"
                        android:gravity="center"
                        android:padding="@dimen/wh10"
                        android:text="我的课程"
                        android:textColor="@color/one_level"
                        android:textSize="@dimen/top_text" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/jt" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line"
                    android:padding="5dp" />

                <RelativeLayout
                    android:id="@+id/user_tg"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/wh45"
                    android:background="@color/white"
                    android:showDividers="middle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/tg"
                        android:gravity="center"
                        android:padding="@dimen/wh10"
                        android:text="我的团购"
                        android:textColor="@color/one_level"
                        android:textSize="@dimen/top_text" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/jt" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line"
                    android:padding="5dp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line"
                    android:padding="5dp" />

                <RelativeLayout
                    android:id="@+id/user_tz"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/wh45"
                    android:background="@color/white"
                    android:showDividers="middle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/tz"
                        android:gravity="center"
                        android:padding="@dimen/wh10"
                        android:text="我的帖子"
                        android:textColor="@color/one_level"
                        android:textSize="@dimen/top_text" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/jt" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="10px"
                    android:background="@color/line"
                    android:padding="5dp" />

                <RelativeLayout
                    android:id="@+id/user_exam"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/wh45"
                    android:background="@color/white"
                    android:showDividers="middle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/kh"
                        android:gravity="center"
                        android:padding="@dimen/wh10"
                        android:text="我的考核"
                        android:textColor="@color/one_level"
                        android:textSize="@dimen/top_text" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/jt" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line"
                    android:padding="5dp" />

                <RelativeLayout
                    android:id="@+id/user_jd"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/wh45"
                    android:background="@color/white"
                    android:showDividers="middle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/jd"
                        android:gravity="center"
                        android:padding="@dimen/wh10"
                        android:text="学习进度"
                        android:textColor="@color/one_level"
                        android:textSize="@dimen/top_text" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/jt" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="10px"
                    android:background="@color/line"
                    android:padding="5dp" />

                <RelativeLayout
                    android:id="@+id/user_zh"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/wh45"
                    android:background="@color/white"
                    android:showDividers="middle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/zh"
                        android:gravity="center"
                        android:padding="@dimen/wh10"
                        android:text="账户中心"
                        android:textColor="@color/one_level"
                        android:textSize="@dimen/top_text" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/jt" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line"
                    android:padding="5dp" />

                <RelativeLayout
                    android:id="@+id/user_sz"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/wh45"
                    android:background="@color/white"
                    android:showDividers="middle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/sz"
                        android:gravity="center"
                        android:padding="@dimen/wh10"
                        android:text="系统设置"
                        android:textColor="@color/one_level"
                        android:textSize="@dimen/top_text" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/jt" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line"
                    android:padding="5dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
