<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.shizhanzhe.szzschool.widge.VpSwipeRefreshLayout
        android:id="@+id/center_swip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/banner"
                    android:focusableInTouchMode="true"
                    sl:image_scale_type="fit_xy" />

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh60"
                    android:scaleType="fitXY"
                    android:src="@drawable/center_img" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh40"
                    android:background="@color/black"
                    android:orientation="horizontal"
                    android:padding="@dimen/wh10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="限时特惠"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fl_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:gravity="center_vertical"
                        android:text="/学点推广方法，让生意更好做"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text" />

                    <TextView
                        android:id="@+id/th_more"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="更多"
                        android:textColor="@color/white" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line" />

                <com.shizhanzhe.szzschool.utils.MyGridView
                    android:id="@+id/gridview_th"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:horizontalSpacing="2dp"
                    android:numColumns="2"
                    android:padding="5dp"
                    android:scrollbars="none"
                    android:verticalSpacing="@dimen/wh10" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh10"
                    android:background="#eeeeee" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh40"
                    android:background="@color/black"
                    android:orientation="horizontal"
                    android:padding="@dimen/wh10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="职业技能提升"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fl_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="/免费学习，让职业技能更上一层楼"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text" />

                    <TextView
                        android:id="@+id/zyts_more"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="更多"
                        android:textColor="@color/white" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line" />

                <com.shizhanzhe.szzschool.utils.MyGridView
                    android:id="@+id/gridview_zyts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:horizontalSpacing="2dp"
                    android:numColumns="2"
                    android:padding="5dp"
                    android:scrollbars="none"
                    android:verticalSpacing="@dimen/wh10" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh10"
                    android:background="#eeeeee" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh40"
                    android:background="@color/black"
                    android:orientation="horizontal"
                    android:padding="@dimen/wh10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="团购课程"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fl_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:gravity="center_vertical"
                        android:text="/优惠多多"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line" />

                <com.shizhanzhe.szzschool.utils.MyGridView
                    android:id="@+id/gridview_tg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:numColumns="1"
                    android:padding="5dp"
                    android:scrollbars="none"
                     />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh10"
                    android:background="#eeeeee" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh40"
                    android:background="@color/black"
                    android:gravity="center"
                    android:padding="@dimen/wh10"
                    android:text="互动交流，共同成长"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fl_text" />

                <com.shizhanzhe.szzschool.utils.MyListView
                    android:id="@+id/gv_forum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="#eeeeee"
                    android:dividerHeight="3dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:background="@color/line" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="@dimen/wh100"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="我是有底线的" />


                    </RelativeLayout>

                </FrameLayout>

            </LinearLayout>
        </ScrollView>
    </com.shizhanzhe.szzschool.widge.VpSwipeRefreshLayout>

    <com.qmuiteam.qmui.widget.QMUIEmptyView
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.qmuiteam.qmui.widget.QMUIEmptyView>
</RelativeLayout>