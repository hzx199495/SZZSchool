<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">
<LinearLayout
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/layout_login_topbar"
        style="@style/TopbarStyle" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="忘记密码"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:id="@+id/textView5" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/back_arrow"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:id="@+id/back" />
        <TextView
            android:id="@+id/forget_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一步"
            android:textColor="@color/blue2"
            android:textSize="17sp"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="27dp"
            android:layout_marginEnd="27dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/forget_tel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:background="@color/white"
            android:gravity="center|left"
            android:hint="@string/hint_input_tel"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingBottom="12.5dip"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:paddingTop="12.5dip"
            android:textColor="@color/one_level"
            android:textColorHint="@color/hint"
            android:textSize="@dimen/top_text" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="7.5dip"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:paddingTop="7.5dip">

            <EditText
                android:id="@+id/forget_yzm"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="3.0"
                android:background="@color/transparent"
                android:gravity="center|left"
                android:hint="@string/hint_input_ic"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/one_level"
                android:textColorHint="@color/hint"
                android:textSize="@dimen/top_text" />

            <Button
                android:id="@+id/get_yzm"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="2.0"
                android:background="@drawable/btn_four_shape"
                android:gravity="center"
                android:padding="7.0dip"
                android:text="@string/get_ic"
                android:textColor="@color/one_level"
                android:textSize="@dimen/text" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/line" />
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:id="@+id/set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            style="@style/TopbarStyle" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="设置密码"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:id="@+id/textView6" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/back_arrow"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:id="@+id/back2" />
            <TextView
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交"
                android:textColor="@color/blue2"
                android:textSize="17sp"
                android:layout_alignBottom="@+id/textView6"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="27dp"
                android:layout_marginEnd="27dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line" />

            <EditText
                android:id="@+id/reset_new_pass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center|left"
                android:hint="@string/hint_input_new_pass"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingBottom="12.5dip"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:paddingTop="12.5dip"
                android:textColor="@color/one_level"
                android:textColorHint="@color/hint"
                android:textSize="@dimen/top_text" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line" />

            <EditText
                android:id="@+id/reset_new_pass_two"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center|left"
                android:hint="@string/hint_input_new_pass_two"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingBottom="12.5dip"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:paddingTop="12.5dip"
                android:textColor="@color/one_level"
                android:textColorHint="@color/hint"
                android:textSize="@dimen/top_text" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>