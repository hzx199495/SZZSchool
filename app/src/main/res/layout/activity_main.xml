<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <LinearLayout
        style="@style/TopbarStyle"
        android:orientation="horizontal"
        android:background="#87CEFA">

        <ImageView
            android:id="@+id/img_main"
            android:src="@drawable/logo_other"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content" />
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/ic_search"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="50dp"
            android:id="@+id/search_tv"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@drawable/shape_rectangle"
            android:textColor="@color/three_level"
            android:text="请输入关键词" />
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </LinearLayout>
    <View
        android:layout_marginBottom="5dp"
        android:background="@color/three_level"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/center"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@android:color/transparent"
                android:button="@null"
                android:checked="true"
                android:drawablePadding="4.0dip"
                android:drawableTop="@drawable/home_tab_coures_center_selected"
                android:gravity="center"
                android:text="首页"
                android:textColor="@drawable/btn_selector"
                android:textSize="14.0sp"
                />
            <RadioButton
                android:id="@+id/fl"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawablePadding="4.0dip"
                android:drawableTop="@drawable/home_tab_more_selected"
                android:gravity="center"
                android:text="课程中心"
                android:textColor="@drawable/btn_selector"
                android:textSize="14.0sp"
                android:checked="false" />

            <RadioButton
                android:id="@+id/project"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawablePadding="4.0dip"
                android:drawableTop="@drawable/home_tab_more_selected"
                android:gravity="center"
                android:text="社区论坛"
                android:textColor="@drawable/btn_selector"
                android:textSize="14.0sp"
                android:checked="false" />
            <RadioButton
                android:id="@+id/course"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawablePadding="4.0dip"
                android:drawableTop="@drawable/home_tab_my_coures_selected"
                android:gravity="center"
                android:text="个人中心"
                android:textColor="@drawable/btn_selector"
                android:textSize="14.0sp"
                android:checked="false" />

        </RadioGroup>


</LinearLayout>

