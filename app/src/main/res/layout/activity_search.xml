<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_top"
        android:orientation="horizontal"
        android:background="#4285f4">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <EditText
                android:paddingLeft="8dp"
                android:id="@+id/search_et_input"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="12dp"
                android:background="@drawable/shape_rectangle"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="网络推广/PHP开发/PhotoShop..."
                android:ellipsize="end"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="@dimen/top_text" />

            <ImageView
                android:id="@+id/search_iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="20dp"
                android:src="@drawable/iv_delete_bg"
                android:visibility="gone" />

        </FrameLayout>

        <TextView
            android:id="@+id/search_btn_back"
            android:layout_width="@dimen/wh40"
            android:layout_height="@dimen/wh35"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#4285f4"
            android:text="取消"
            android:textSize="@dimen/top_text"
            android:textColor="@color/color_white" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.shizhanzhe.szzschool.utils.MyListView
                android:id="@+id/kc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"/>
            <com.shizhanzhe.szzschool.utils.MyListView
                android:id="@+id/lt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"/>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_marginLeft="@dimen/wh10"
        android:layout_marginTop="@dimen/wh10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="实战者热搜"
        android:padding="2dp"
        android:drawableLeft="@drawable/hotpro"
        android:textSize="15sp"/>
    <com.shizhanzhe.szzschool.widge.FlowLayout
        android:id="@+id/flowLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
    </com.shizhanzhe.szzschool.widge.FlowLayout>
</LinearLayout>