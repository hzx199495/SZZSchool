<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout

                    android:layout_width="fill_parent"
                    android:layout_height="140dp"
                    android:background="@drawable/userbg"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/setzl"
                        android:layout_width="match_parent"
                        android:layout_height="65.0dip"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/cv"
                            android:layout_width="65.0dip"
                            android:layout_height="65.0dip"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerCrop"
                            android:src="@drawable/userhead" />

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_toEndOf="@+id/cv"
                            android:layout_toRightOf="@+id/cv"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="用户名"
                                android:textColor="@color/white"
                                android:textSize="15.0sp" />

                            <TextView
                                android:id="@+id/tv_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="普通用户"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20dp"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/jt" />

                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/user_pro"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:showDividers="middle">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/pro"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="我的课程"
                        android:textColor="@color/one_level"
                        android:textSize="14.0sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jt"
                        android:layout_marginRight="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line"
                    android:padding="5dp" />

                <RelativeLayout
                    android:id="@+id/user_tg"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:showDividers="middle">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/tg"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="我的团购"
                        android:textColor="@color/one_level"
                        android:textSize="14.0sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jt"
                        android:layout_marginRight="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp" />
                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line"
                    android:padding="5dp" />
                <RelativeLayout
                    android:id="@+id/user_sc"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:showDividers="middle">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/sc"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="我的收藏"
                        android:textColor="@color/one_level"
                        android:textSize="14.0sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jt"
                        android:layout_marginRight="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp" />
                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="20px"
                    android:background="@color/line"
                    android:padding="5dp" />
                <RelativeLayout
                    android:id="@+id/user_note"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:showDividers="middle">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/note"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="我的笔记"
                        android:textColor="@color/one_level"
                        android:textSize="14.0sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jt"
                        android:layout_marginRight="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp" />
                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line"
                    android:padding="5dp" />
                <RelativeLayout
                    android:id="@+id/user_jd"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:showDividers="middle">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/jd"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="学习进度"
                        android:textColor="@color/one_level"
                        android:textSize="14.0sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jt"
                        android:layout_marginRight="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp" />
                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="20px"
                    android:background="@color/line"
                    android:padding="5dp" />
                <RelativeLayout
                    android:id="@+id/user_zh"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:showDividers="middle">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/zh"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="账户中心"
                        android:textColor="@color/one_level"
                        android:textSize="14.0sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jt"
                        android:layout_marginRight="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp" />
                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line"
                    android:padding="5dp" />
                <RelativeLayout
                    android:id="@+id/user_sz"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:showDividers="middle">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/sz"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="系统设置"
                        android:textColor="@color/one_level"
                        android:textSize="14.0sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jt"
                        android:layout_marginRight="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp" />
                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line"
                    android:padding="5dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
