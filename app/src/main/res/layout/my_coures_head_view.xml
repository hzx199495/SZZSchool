<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="15.0dip"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_mycourse_topjt" />

            <LinearLayout
                android:id="@+id/rl_user_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="75.0dip"
                            android:layout_height="75.0dip"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_mycourse_txborder" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/bg"
                            android:layout_width="65.0dip"
                            android:layout_height="65.0dip"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerCrop"
                            android:src="@drawable/userhead"
                            />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8.5dip"
                    android:gravity="center"
                    android:text="用户名"
                    android:textColor="@color/black"
                    android:textSize="15.0sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_action_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:showDividers="middle">


            <TextView
                android:id="@+id/tv_zh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawablePadding="7.5dip"
                android:drawableTop="@drawable/ic_home_home"
                android:gravity="center"
                android:padding="11.0dip"
                android:text="账户中心"
                android:textColor="@color/one_level"
                android:textSize="13.0sp" />

            <TextView
                android:id="@+id/tv_sc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawablePadding="7.5dip"
                android:drawableTop="@drawable/ic_home_mycourse"
                android:gravity="center"
                android:padding="11.0dip"
                android:text="我的收藏"
                android:textColor="@color/one_level"
                android:textSize="13.0sp" />

            <TextView
                android:id="@+id/tv_xx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawablePadding="7.5dip"
                android:drawableTop="@drawable/ic_home_more"
                android:gravity="center"
                android:padding="11.0dip"
                android:text="我的消息"
                android:textColor="@color/one_level"
                android:textSize="13.0sp" />

            <TextView
                android:id="@+id/tv_sz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawablePadding="7.5dip"
                android:drawableTop="@drawable/ic_home_more"
                android:gravity="center"
                android:padding="11.0dip"
                android:text="系统设置"
                android:textColor="@color/one_level"
                android:textSize="13.0sp" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>