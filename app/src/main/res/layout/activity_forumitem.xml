                <!--android:textSize="16sp" />-->
                <RelativeLayout
                    android:id="@+id/topic_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="@dimen/top_left_iv_width"
                        android:layout_height="@dimen/top_left_iv_height"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/polyv_avatar_def" />


                    <TextView
                        android:id="@+id/text_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/avatar"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/avatar"
                        android:text="author"
                        android:textColor="#3bbd79"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/text_timeline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/avatar"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/avatar"
                        android:text="一分钟前"
                        android:textColor="#aaa"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_replies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/text_timeline"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/text_timeline"
                        android:text="1个回复"
                        android:textColor="#aaa"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_node"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/text_author"
                        android:layout_marginRight="16dp"
                        android:background="#e5e5e5"
                        android:text="Python"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/text_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/text_node"
                        android:layout_alignLeft="@+id/avatar"
                        android:layout_alignRight="@+id/text_node"
                        android:layout_below="@+id/avatar"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="8dp"
                        android:text="主题"
                        android:textColor="#de000000"
                        android:textSize="18sp" />

                    <View
                        android:id="@+id/divide_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/text_title"
                        android:layout_marginTop="8dp"
                        android:background="#ffe4e4e4" />

                    <TextView
                        android:id="@+id/item_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/text_title"
                        android:layout_alignLeft="@+id/avatar"
                        android:layout_alignRight="@+id/text_title"
                        android:layout_below="@+id/divide_line"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="1.25dp"
                        android:text="帖子内容" />

                </RelativeLayout>

                    <Button
                        android:id="@+id/ds"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="打赏楼主"
                        android:background="@drawable/shape"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <com.shizhanzhe.szzschool.utils.MyListView
                        android:id="@+id/lv_talk"
                        style="@style/lv_commom"
                        android:dividerHeight="@dimen/center_bottom_margin_top_s" />

                    <include layout="@layout/polyv_center_loadlayout" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/rl_bot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_layout_height"
            android:layout_alignParentBottom="true"
            android:background="@drawable/polyv_blue_click_to_gray"
            android:clickable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/polyv_ic_disc" />

                <TextView
                    android:id="@+id/et_talk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/bottom_tv_margin_left"
                    android:text="讨论"
                    android:textColor="@color/top_layout_color_white"
                    android:textSize="@dimen/bottom_text_size" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
</LinearLayout>