<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layout_login_topbar"
        style="@style/TopbarStyle" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="账户中心"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="17sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:paddingLeft="15dp"
            android:layout_height="@dimen/wh20"
            android:src="@drawable/back_arrow"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:id="@+id/back" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/wh200"
                android:background="#4444f0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="25dp"
                    android:text="账户余额(元)"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/mymoney"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_alignLeft="@+id/textView"
                    android:layout_alignStart="@+id/textView"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="70sp" />

            </RelativeLayout>

            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_white_selected"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="12.5dip"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:paddingTop="12.5dip">

                <TextView
                    android:id="@+id/recharge"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="充值"
                    android:textColor="@color/one_level"
                    android:textSize="@dimen/top_text" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="7.5dip"
                    android:drawableRight="@drawable/ic_list_right_jt"
                    android:textColor="@color/four_level"
                    android:textSize="@dimen/end_text" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_white_selected"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="12.5dip"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:paddingTop="12.5dip">

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="打赏"
                    android:textColor="@color/one_level"
                    android:textSize="@dimen/end_text" />

                <TextView
                    android:id="@+id/dsmoney"
                    android:layout_width="@dimen/wh100"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:id="@+id/dstx"
                    android:layout_width="@dimen/wh40"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="提现"
                    android:textColor="@color/blue2" />

                <TextView
                    android:id="@+id/dszy"
                    android:layout_width="@dimen/wh40"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="转移"
                    android:textColor="@color/blue2" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_white_selected"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="12.5dip"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:paddingTop="12.5dip">

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="开团获利"
                    android:textColor="@color/one_level"
                    android:textSize="@dimen/top_text" />

                <TextView
                    android:id="@+id/tgmoney"
                    android:layout_width="@dimen/wh100"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:id="@+id/tgtx"
                    android:layout_width="@dimen/wh40"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="提现"
                    android:textColor="@color/blue2" />

                <TextView
                    android:id="@+id/tgzy"
                    android:layout_width="@dimen/wh40"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="转移"
                    android:textColor="@color/blue2" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_white_selected"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="12.5dip"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:paddingTop="12.5dip">

                <TextView
                    android:id="@+id/ktvip"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="VIP"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="未开通" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="7.5dip"
                    android:drawableRight="@drawable/ic_list_right_jt"
                    android:textColor="@color/four_level"
                    android:textSize="@dimen/end_text" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="@color/line" />

            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_white_selected"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="12.5dip"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:paddingTop="12.5dip">

                <TextView
                    android:id="@+id/xf"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="消费记录"
                    android:textColor="@color/one_level"
                    android:textSize="@dimen/top_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="7.5dip"
                    android:drawableRight="@drawable/ic_list_right_jt"
                    android:textColor="@color/four_level"
                    android:textSize="@dimen/end_text" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.qmuiteam.qmui.widget.QMUIEmptyView
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </com.qmuiteam.qmui.widget.QMUIEmptyView>
</LinearLayout>
