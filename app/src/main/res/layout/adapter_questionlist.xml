<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="淘宝只是一种结果，这话说得特别正确！"
        android:textColor="#3f5b77"
        android:textSize="@dimen/fl_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/project"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="网络推广变现2—掘金思路"
            android:textColor="@color/blue2"
            android:textSize="@dimen/text"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="2017-03-07"
            android:gravity="end"
            android:textSize="@dimen/text"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lyt_alst_adapter_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:visibility="visible">
        <TextView
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/polyv_border_s"
            android:text="已回复"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:textColor="#e79429"/>
        <TextView
            android:id="@+id/stay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ok"
            android:layout_marginTop="5dp"
            android:background="@drawable/polyv_border_s"
            android:text="待回答"
            android:visibility="gone"
            android:textColor="@color/red"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1人觉得有帮助"
            android:textColor="#949bac"
            android:textSize="@dimen/text"
            android:layout_alignBottom="@+id/stay"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cfcfcf"/>
</LinearLayout>